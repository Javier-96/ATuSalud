@model ATuSalud.Models.TablaAntecedentes

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Quieres eliminar este antecedente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Familiar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Familiar)
        </dd>
        <dt class="col-sm-2">
            Código CIAP
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoCiap.Enfermedad)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
