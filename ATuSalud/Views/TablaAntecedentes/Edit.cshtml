@model ATuSalud.Models.TablaAntecedentes

@{
    ViewData["Title"] = "Edit";
}


<h4>Editar antecedente</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group col-lg-4 col-12">
            <label>Id Paciente</label>
            <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.Antecedentes"></select>
            <span asp-validation-for="PacienteId" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4 col-12">
            <label asp-for="Familiar" class="control-label"></label>
            <input asp-for="Familiar" class="form-control" />
            <span asp-validation-for="Familiar" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4 col-12">
            <label>Id del CIAP</label>
            <select asp-for="CodigoCiapId" class="form-control" asp-items="ViewBag.Antecedentes1"></select>
            <span asp-validation-for="CodigoCiapId" class="text-danger"></span>
        </div>
        <div class="form-group col-3">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
