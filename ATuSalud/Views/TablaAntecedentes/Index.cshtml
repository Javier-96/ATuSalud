@model IEnumerable<ATuSalud.Models.TablaAntecedentes>

@{
    ViewData["Title"] = "Index";
}


<p class="btn btn-info">
    <a asp-action="Create" style="color: white;">Añadir antecedente</a>
</p>
<table class="table table-striped text-center">
    <thead class="bg-info text-light">
        <tr>
            <th>
                Paciente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Familiar)
            </th>
            <th>
                Código CIAP
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nombre) @Html.DisplayFor(modelItem => item.Paciente.Apellido1) @Html.DisplayFor(modelItem => item.Paciente.Apellido2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Familiar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCiap.Codigo)-@Html.DisplayFor(modelItem => item.CodigoCiap.Enfermedad)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
