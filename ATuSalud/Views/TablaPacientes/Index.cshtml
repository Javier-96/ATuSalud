@model IEnumerable<ATuSalud.Models.TablaPaciente>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <br />
    <a asp-action="Create" class="btn btn-info " style="color: white;">Añadir pacientes</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_2" asp-action="Index" style="color: white;" class="btn btn-info ">Pacientes menores de edad</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_6" asp-action="Index" style="color: white;" class="btn btn-info ">Pacientes polimedicados</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_8" asp-action="Index" style="color: white;" class="btn btn-info ">Antecedentes</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_13" asp-action="Index" style="color: white;" class="btn btn-info ">Citas</a>
</div>
<br />

<div class="row">
    <table class="table table-striped text-center">
        <thead class="bg-info text-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    Primer Apellido
                </th>
                <th>
                    Segundo Apellido
                </th>
                <th>
                    Seguro Privado
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DNI)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seguro_privado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DNI)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

