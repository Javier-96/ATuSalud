@model ATuSalud.Models.TablaPaciente

@{
    ViewData["Title"] = "Delete";
}


<h3>¿Quieres borrar este paciente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Primer apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido1)
        </dd>
        <dt class = "col-sm-2">
             Segundo apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido2)
        </dd>
        <dt class = "col-sm-2">
            Fecha de nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_de_nacimiento)
        </dd>
        <dt class = "col-sm-2">
            Seguro privado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seguro_privado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class = "col-sm-2">
            Dirección
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion_postal)
        </dd>
        <dt class = "col-sm-2">
            Telefono fijo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefono_fijo)
        </dd>
        <dt class = "col-sm-2">
            Teléfono móvil 1
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefono_movil_1)
        </dd>
        <dt class = "col-sm-2">
            Teléfono móvil 2
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefono_movil_2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
