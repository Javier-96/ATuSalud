@model IEnumerable<ATuSalud.Models.TablaProfesional>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <br />
    <a asp-action="Create" class="btn btn-info " style="color: white;">Añadir profesional</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_1" asp-action="Index" style="color: white;" class="btn btn-info ">Ordenados alfabéticamente</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_7" asp-action="Index" style="color: white;" class="btn btn-info ">+ 5 episodios</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_12" asp-action="Index" style="color: white;" class="btn btn-info ">Citas</a>
</div>
<br />

<div class="row">
    <table class="table table-striped text-center">
        <thead class="bg-info text-light">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Especialidad
                </th>
                <th>
                    Número de colegiado
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.apellido1) @Html.DisplayFor(modelItem => item.apellido2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.especialidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.num_colegiado)
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<form asp-action="Index">
    <input type="submit" value="Filtrar por profesional"
           class="btn btn-primary" />
</form>