@model IEnumerable<ATuSalud.Models.TablaProfesional>

@{
    ViewData["Title"] = "Index";
}

<p class="btn btn-info">
    <a asp-action="Create" style="color: white;">Añadir profesional</a>
</p>
<table class="table table-striped text-center">
    <thead class="bg-info text-light">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Especialidad
            </th>
            <th>
                Número de colegiado
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.apellido1) @Html.DisplayFor(modelItem => item.apellido2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.especialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.num_colegiado)
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<form asp-action="Index">
    <input type="submit" value="Filtrar por profesional"
           class="btn btn-primary" />
</form>