@model ATuSalud.Models.TablaProfesional

@{
    ViewData["Title"] = "Edit";
}



<h4>Editar Profesional</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="id" />
        <div class="form-group col-lg-4 col-12">
            <label >Nombre</label>
            <input asp-for="nombre" class="form-control" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4 col-12">
            <label >Primer Apellido</label>
            <input asp-for="apellido1" class="form-control" />
            <span asp-validation-for="apellido1" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4 col-12">
            <label>Segundo Apellido</label>
            <input asp-for="apellido2" class="form-control" />
            <span asp-validation-for="apellido2" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6 col-12">
            <label>Especialidad</label>
            <input asp-for="especialidad" class="form-control" />
            <span asp-validation-for="especialidad" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6 col-12">
            <label >Número de colegiado</label>
            <input asp-for="num_colegiado" class="form-control" />
            <span asp-validation-for="num_colegiado" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label >Foto</label>
            <input type="file" name="fichero" class="form-control" />
            <span asp-validation-for="foto" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
