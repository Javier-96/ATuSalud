@using ATuSalud.ViewData
@model List<SqlQuery_17ViewData>
@{
    ViewData["Title"] = "Index";
}

<h3>Listado de profesionales ordenados por nombre y apellido</h3>

<form asp-action="Index">
    <div class="row">
        <div class="col-1">
            Profesional:
        </div>
        <div class="col-4">
            <select name="especialidad" class="form-control" asp-items="ViewBag.Especialidad">
                <option value="0">Todos</option>
            </select>
        </div>
        <div class="col-1">
            Fecha:
        </div>
        <div class="col-4">
            <input type="date" name="fecha" value="ViewBag.Fecha" />
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-dark" value="Consultar" />
        </div>
    </div>
</form>
<hr />

@if (Model != null)
{
    <table class="table table-striped">
        <thead class="bg-info text-light">
            <tr>
                <th>Nombre</th>
                <th>Especialidad</th>
            </tr>
        </thead>
        @foreach (SqlQuery_17ViewData item in Model)
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.especialidad</td>
            </tr>
        }
    </table>
}

