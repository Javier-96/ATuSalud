@model IEnumerable<ATuSalud.Models.TablaRecetas>

@{
    ViewData["Title"] = "Index";
}

<p class="btn btn-info">
    <a asp-action="Create" style="color: white;">Añadir receta</a>
</p>

<table class="table table-striped">
    <thead class="bg-info text-light">
        <tr>
            <th>
                Nombre del Paciente
            </th>
            <th>
                Diagnóstico
            </th>
            <th>
                Medicamento
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnostico)
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicamento_generico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
