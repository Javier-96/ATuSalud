@model ATuSalud.Models.TablaEspacios

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Quieres eliminar este espacio?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reserva.Id)
        </dd class>
        <dt class = "col-sm-2">
            Espacio general
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EspacioGeneral)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mobiliario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mobiliario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
