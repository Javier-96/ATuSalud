@model ATuSalud.Models.TablaEpisodios

@{
    ViewData["Title"] = "Delete";
}



<h3>¿Quieres eliminar este episodio?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre del Paciente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nombre del episodio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Fecha de inicio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            Fecha de finalización
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFinal)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Causa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Causa)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
