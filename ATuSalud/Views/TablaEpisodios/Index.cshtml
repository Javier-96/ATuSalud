@model IEnumerable<ATuSalud.Models.TablaEpisodios>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <br />
    <a asp-action="Create" class="btn btn-info " style="color: white;">Añadir episodio</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_9" asp-action="Index" style="color: white;" class="btn btn-info ">Episodios abiertos</a>
</div>
<br />
<div class="row">
    <table class="table table-striped text-center">
        <thead class="bg-info text-light">
            <tr>
                <th>
                    Nombre del paciente
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Causa)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.Nombre)  @Html.DisplayFor(modelItem => item.Paciente.Apellido1)  @Html.DisplayFor(modelItem => item.Paciente.Apellido2)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Causa)
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>|
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>|
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
