@model ATuSalud.Models.TablaEpisodios

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Episodio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nombre del episodio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Enfermedad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo.Enfermedad)
        </dd>

        <dt class="col-sm-2">
            Fecha de inicio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            Fecha de finalización
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFinal)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Causa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Causa)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
