@model ATuSalud.Models.TablaPatologias

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Detalle de la patologia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Id Paciente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_paciente)
        </dd>
        <dt class = "col-sm-2">
            Código CIAP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TablaCodigoCIAPId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
