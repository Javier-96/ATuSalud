@model IEnumerable<ATuSalud.Models.TablaDatosFisicos>

@{
    ViewData["Title"] = "Index";
}


<p class="btn btn-info">
    <a asp-action="Create" style="color: white;">Añadir datos fisicos</a>
</p>
<table class="table table-striped text-center">
    <thead class="bg-info text-light">
        <tr>
            <th>
                Paciente Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alergias)
            </th>
            <th>
                Grupo sanguineo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fumador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drogas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PacienteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alergias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grupo_sanguineo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fumador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Drogas)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar </a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
