@model ATuSalud.Models.TablaCitasPaciente

@{
    ViewData["Title"] = "Create";
}

<h4>Añadir Citas Pacientes</h4>
<hr />

<form asp-action="Create">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-xs-12 col-lg-4">
            <label asp-for="TablaPacienteId" class="control-label"></label>
            <input asp-for="TablaPacienteId" class="form-control" />
            <span asp-validation-for="TablaPacienteId" class="text-danger"></span>
        </div>
        <div class="form-group col-xs-12 col-lg-4">
            <label asp-for="TablaProfesionalId" class="control-label"></label>
            <input asp-for="TablaProfesionalId" class="form-control" />
            <span asp-validation-for="TablaProfesionalId" class="text-danger"></span>
        </div>
        <div class="form-group col-xs-12 col-lg-4">
            <label asp-for="Fecha_atencion" class="control-label"></label>
            <input asp-for="Fecha_atencion" class="form-control" />
            <span asp-validation-for="Fecha_atencion" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Fecha de finalización</label>
            <input asp-for="Fecha_acabar" class="form-control" />
            <span asp-validation-for="Fecha_acabar" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Observaciones" class="control-label"></label>
            <input asp-for="Observaciones" class="form-control" />
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label>Fecha de registro</label>
            <input asp-for="Fecha_registro" class="form-control" />
            <span asp-validation-for="Fecha_registro" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Volver a tabla</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
