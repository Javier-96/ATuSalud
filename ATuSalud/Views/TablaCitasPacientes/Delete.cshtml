@model ATuSalud.Models.TablaCitasPaciente

@{
    ViewData["Title"] = "Delete";
}


<div>
    <h4>¿Quieres eliminar esta cita?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Paciente:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TablaPaciente.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Profesional:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TablaProfesional.nombre)
        </dd>
        <dt class = "col-sm-2">
            Fecha de atencion:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_atencion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de acabado:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_acabar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_registro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
