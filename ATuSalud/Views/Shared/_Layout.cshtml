<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/img/favicon.png">
    <title>@ViewData["Title"] - ATuSalud</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital@1&display=swap" rel="stylesheet">
    <style>
        .map-container-section {
            overflow: hidden;
            padding-bottom: 56.25%;
            position: relative;
            height: 0;
        }

            .map-container-section iframe {
                left: 0;
                top: 0;
                height: 100%;
                width: 100%;
                position: absolute;
            }
    </style>
</head>
<body>
    <!--Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content bg-secondary text-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="font-family: 'Lora', serif;">Iniciar sesion</h5>
                    <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div style="font-family: 'Lora', serif;">Usuario</div>
                            <input class="col-12" type="text" style="border-radius: 15px;" />
                        </div>
                        <div class="row">
                            <div style="font-family: 'Lora', serif;">Contraseña</div>
                            <input class="col-12" type="password" style="border-radius: 15px;" />
                        </div>
                        <br />
                        <p class="text-center" style="font-family: 'Lora', serif;">¿No tienes una cuenta? <a asp-controller="home" asp-action="registro" style="color:black;">Registrate</a> </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark">Enviar</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal-->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-controller="home" asp-action="index"><img src="/img/logo.png" width="300px" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown" style="margin-top: 5px;">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Administracion
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="TablaAntecedentes" asp-action="index">Antecedentes</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaCitasPacientes" asp-action="index">Citas-pacientes</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaCitasPacientes" asp-action="index">Codigos CIAP</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaDatosFisicos" asp-action="index">Datos fisicos</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaEpisodios" asp-action="index">Episodios</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaEspacios" asp-action="index">Espacios</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaMedicamentos" asp-action="index">Medicamentos</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaPacientes" asp-action="index">Pacientes</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaPatologias" asp-action="index">Patologias</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaProfesional" asp-action="index">Profesionales</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaProfesional_Paciente" asp-action="index">Profesional-paciente</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaRecetas" asp-action="index">Recetas</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="TablaReservaEspacios" asp-action="index">Reserva-espacios</a>
                        </div>
                    </li>
                    <li class="nav-item active" style="margin-top: 5px;">
                        <a class="nav-link" asp-controller="home" asp-action="listado">Listados</a>
                    </li>
                    <li class="nav-item active" style="margin-top: 5px;">
                        <a class="nav-link" asp-controller="home" asp-action="contacto">Contacto</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item" style="margin-right:15px; margin-top:5px;">
                        <a class="btn btn-secondary" asp-controller="home" asp-action="registro">Registrarse</a>
                    </li>
                    <li class="nav-item" style="margin-right:15px; margin-top:5px;">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Iniciar sesion
                        </button>
                    </li>
                </ul>       
            </div>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
        <br />
    </main>
    <footer class="border-top footer text-muted">
        <div class="row" style="background-color: #81BFFE; text-align: center;">
            <div class="col-lg-4 col-xs-12">
                <br />
                <h2><strong>Contáctanos</strong></h2>
                <ul style="text-align:justify center; padding:30px; list-style:none;">
                    <li><strong>Whatsapp:</strong> <a href="https://wa.me/34643564564">643564564</a></li>
                    <li><strong>Teléfono:</strong> 980345234</li>
                    <li><strong>Email:</strong> <a href="mailto:info@atusalud.com">info@atusalud.com</a></li>
                </ul>
            </div>
            <div class="col-lg-4 col-xs-12">
                <br />
                <h2><strong>Visita nuestra clínica</strong></h2>
                <ul style="text-align:justify center; padding:30px; list-style:none;">
                    <li><a>C/ Majadero 36 4ºC</a></li>
                    <li><a>50006 Zaragoza</a></li>
                </ul>
            </div>
            <div class="col-lg-4 col-xs-12">
                <br />
                <img src="/img/logo.png" width="50%" /><br /><br />
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2980.3456570895773!2d-0.9049408848488676!3d41.66987777923926!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd59148c3bd689b7%3A0x3ea25502c941248b!2sOc%C3%A9ano%20Atl%C3%A1ntico%3A%20Formaci%C3%B3n%20Profesional!5e0!3m2!1ses!2ses!4v1619770750235!5m2!1ses!2ses" width="300" height="175" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })
    </script>
</body>
</html>
