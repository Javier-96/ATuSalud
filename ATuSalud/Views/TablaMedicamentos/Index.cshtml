@model IEnumerable<ATuSalud.Models.TablaMedicamentos>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <br />
    <a asp-action="Create" class="btn btn-info " style="color: white;">Añadir medicamento</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_19" asp-action="Index" style="color: white;" class="btn btn-info ">Medicamentos severos</a>
    <div class="col-1"> </div>
    <a asp-controller="sqlquery_5" asp-action="Index" style="color: white;" class="btn btn-info ">Medicamentos ordenador alfabéticamente</a>
</div>
<br />
<div class="row">
    <table class="table table-striped text-center">
        <thead class="bg-info text-light">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Observaciones
                </th>
                <th>
                    Efectos Secundarios
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_medicamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Forma_farmaceutica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EfectoSecId)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
