@model ATuSalud.Models.TablaMedicamentos

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TablaMedicamentos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Medicamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre_medicamento)
        </dd>
        <dt class = "col-sm-2">
            Forma farmaceutica
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Forma_farmaceutica)
        </dd>
        <dt class = "col-sm-2">
            Efectos secundarios
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EfectoSecId)
